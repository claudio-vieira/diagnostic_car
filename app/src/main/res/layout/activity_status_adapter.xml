<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/skyliner34"
    android:orientation="vertical"
    tools:context="android.com.br.conexaobluetooth.activities.StatusAdapter">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado do Bluetooth"
            android:editable="false"
            android:textSize="30dp"
            android:textColor="@color/background_floating_material_light"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no"
            android:id="@+id/state_bluetooth"
            android:textSize="25dp"
            android:textColor="@color/background_floating_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conexão com Adaptador"
            android:editable="false"
            android:textSize="30dp"
            android:textColor="@color/background_floating_material_light"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no"
            android:id="@+id/connect_adapter"
            android:textSize="25dp"
            android:textColor="@color/background_floating_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conexão com ECU"
            android:editable="false"
            android:textSize="30dp"
            android:textColor="@color/background_floating_material_light"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="indisponivel"
            android:id="@+id/connect_ecu"
            android:textSize="25dp"
            android:textColor="@color/background_floating_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versão do Adaptador"
            android:editable="false"
            android:textSize="30dp"
            android:textColor="@color/background_floating_material_light"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="indisponivel"
            android:id="@+id/version_adapter"
            android:textSize="25dp"
            android:textColor="@color/background_floating_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protocolo OBD"
            android:editable="false"
            android:textSize="30dp"
            android:textColor="@color/background_floating_material_light"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="indisponivel"
            android:id="@+id/protocol_obd"
            android:textSize="25dp"
            android:textColor="@color/background_floating_material_light" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
