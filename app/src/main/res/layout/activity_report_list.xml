<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/skyliner34"
    android:padding="20dp">


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Gerar Relatório"
        android:id="@+id/btn_gerar_rel"
        android:layout_gravity="center_horizontal"
        android:onClick="gerarReport"
        android:background="@drawable/circle"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_mostrar_rel"
        android:layout_alignStart="@+id/btn_mostrar_rel"
        android:textColor="#fff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Mostrar Relatório"
        android:id="@+id/btn_mostrar_rel"
        android:layout_gravity="center_horizontal"
        android:onClick="mostrarReport"
        android:background="@drawable/circle"
        android:textSize="15sp"
        android:layout_below="@+id/btn_gerar_rel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="#fff" />

</RelativeLayout>