<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/skyliner34"
    android:padding="20dp"
    android:weightSum="1">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="false"
        android:layout_weight="6.71">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.95">

        <Button
            android:id="@+id/btn_conexao"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_settings_bluetooth_white_36dp"
            android:paddingLeft="25dp"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:onClick="conexaoActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Conexão"
            android:id="@+id/textConnect"
            android:textColor="#fff"
            android:layout_below="@+id/btn_conexao"
            android:layout_alignLeft="@+id/btn_conexao"
            android:layout_alignStart="@+id/btn_conexao"
            android:layout_alignRight="@+id/btn_conexao"
            android:layout_alignEnd="@+id/btn_conexao"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_status_adap"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_settings_input_component_white_36dp"
            android:paddingLeft="30dp"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="statusApdapterActivity"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_conexao"
            android:layout_toEndOf="@+id/btn_conexao"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="67dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Status\nAdaptador"
            android:id="@+id/textStatusAdap"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignTop="@+id/textConnect"
            android:layout_alignLeft="@+id/btn_status_adap"
            android:layout_alignStart="@+id/btn_status_adap" />

        <Button
            android:id="@+id/btn_list_veiculos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_list_white_36dp"
            android:paddingLeft="30dp"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="listaCarsActivity"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="87dp"
            android:layout_marginEnd="87dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lista de \nVeículos"
            android:id="@+id/textListVeiculos"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignTop="@+id/textStatusAdap"
            android:layout_alignLeft="@+id/btn_list_veiculos"
            android:layout_alignStart="@+id/btn_list_veiculos"
            android:layout_alignRight="@+id/btn_list_veiculos"
            android:layout_alignEnd="@+id/btn_list_veiculos" />

        <Button
            android:id="@+id/btn_gera_relatorios"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_assignment_white_36dp"
            android:paddingLeft="30dp"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_below="@+id/textStatusAdap"
            android:layout_alignLeft="@+id/textStatusAdap"
            android:layout_alignStart="@+id/textStatusAdap"
            android:onClick="ReportListActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gerar \nReports"
            android:id="@+id/textGeraReport"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_below="@+id/btn_gera_relatorios"
            android:layout_alignLeft="@+id/btn_gera_relatorios"
            android:layout_alignStart="@+id/btn_gera_relatorios" />

        <Button
            android:id="@+id/btn_dados_reais"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_equalizer_white_36dp"
            android:paddingLeft="30dp"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="OBDListActivity"
            android:layout_above="@+id/textGeraReport"
            android:layout_alignLeft="@+id/textConnect"
            android:layout_alignStart="@+id/textConnect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dados\nReais"
            android:id="@+id/textDadosReais"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_below="@+id/btn_dados_reais"
            android:layout_toLeftOf="@+id/btn_status_adap"
            android:layout_alignLeft="@+id/btn_dados_reais"
            android:layout_alignStart="@+id/btn_dados_reais" />

        <Button
            android:id="@+id/btn_cod_falha"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_directions_car_white_36dp"
            android:paddingLeft="30dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="codFalhaActivity"
            android:layout_above="@+id/textGeraReport"
            android:layout_alignLeft="@+id/textCodFalha"
            android:layout_alignStart="@+id/textCodFalha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Codigos\nFalha"
            android:id="@+id/textCodFalha"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_below="@+id/btn_cod_falha"
            android:layout_alignLeft="@+id/textListVeiculos"
            android:layout_alignStart="@+id/textListVeiculos"
            android:layout_alignRight="@+id/btn_list_veiculos"
            android:layout_alignEnd="@+id/btn_list_veiculos" />

    </RelativeLayout>
    </ScrollView>

</LinearLayout>